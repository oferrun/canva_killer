{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/scene-theme.schema.json",
  "title": "Scene Theme",
  "description": "Schema for scene theme defining colors and fonts",
  "type": "object",
  "required": ["theme_id", "theme_name", "color_palette", "font_palette"],
  "properties": {
    "theme_id": {
      "type": "string",
      "description": "Unique identifier for the theme"
    },
    "theme_name": {
      "type": "string",
      "description": "Human-readable name for the theme"
    },
    "color_palette": {
      "type": "array",
      "description": "Array of color definitions (up to 16 colors)",
      "minItems": 1,
      "maxItems": 16,
      "items": {
        "type": "object",
        "required": ["id", "name", "r", "g", "b", "a"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the color"
          },
          "name": {
            "type": "string",
            "description": "Human-readable name for the color"
          },
          "r": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255,
            "description": "Red component (0-255)"
          },
          "g": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255,
            "description": "Green component (0-255)"
          },
          "b": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255,
            "description": "Blue component (0-255)"
          },
          "a": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Alpha/opacity component (0.0-1.0)"
          }
        }
      }
    },
    "font_palette": {
      "type": "array",
      "description": "Array of font definitions (up to 8 fonts)",
      "minItems": 1,
      "maxItems": 8,
      "items": {
        "type": "object",
        "required": ["font_id", "font_name", "font_url"],
        "properties": {
          "font_id": {
            "type": "string",
            "description": "Unique identifier for the font"
          },
          "font_name": {
            "type": "string",
            "description": "Font family name"
          },
          "font_url": {
            "type": "string",
            "format": "uri",
            "description": "URL to font resource (e.g., Google Fonts)"
          }
        }
      }
    }
  }
}
